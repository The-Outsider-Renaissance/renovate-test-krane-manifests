{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "regexManagers:dockerfileVersions"
  ],
  "kubernetes": {
    "fileMatch": [
      "config/deploy/.+\\.ya?ml\\.erb$",
      "deploy/.+\\.ya?ml\\.erb$"
    ]
  },
  {
    "matchPackageNames": [
      "ruby"
    ],
    "allowedVersions": "!/3.0.0/",
    "description": [
      "Ruby 3.0.0 includes a bug."
    ]
  }
}
